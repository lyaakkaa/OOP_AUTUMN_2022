
public class Data {
	private static int cnt;
	private static double sum;
	private static double maxi;
	

	

	
	Data(){
		//this.cnt = 0;
		this.maxi = 0;
	}

	

	
	public static void getSum(double num) {
		sum += num;
		cnt++;
	}
	
	
	
	public static double getAverage() {
		return sum / cnt;
	}
	
	public static double findMaxi(double num) {
		if(num > maxi) {
			maxi = num;
		}
		return num;
	}
	
	
	
	
	
	

}
